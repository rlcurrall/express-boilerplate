{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDirs": ["."],
        "sourceMap": true,
        "target": "es2018",
        "outDir": "./dist",
        "incremental": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "app/*": ["./app/*"],
            "bootstrap": ["./bootstrap/index"],
            "bootstrap/*": ["./bootstrap/*"],
            "config/*": ["./config/*"],
            "lib/*": ["./lib/*"]
        }
    },
    "include": [
        "app/**/*.ts",
        "config/**/*.ts",
        "database/**/*.ts",
        "lib/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}
